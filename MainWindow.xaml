<Window x:Class="SummonerSwap.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:SummonerSwap"
        mc:Ignorable="d"
        Title="SummonerSwap" Height="600" Width="920"
        Background="Transparent"
        WindowStyle="None"
        ResizeMode="NoResize">
    <Border Background="#272537"
            CornerRadius="20">
        <Grid>
            <Grid.RowDefinitions>
                <RowDefinition Height="25" />
                <RowDefinition Height="*" />
            </Grid.RowDefinitions>
            
            <Border Grid.Row="0"
                    Background="#252525"
                    MouseDown="Border_MouseDown">
                
                <Grid HorizontalAlignment="Stretch">
                    <Label Content="SummonerSwap"
                           Foreground="Gray"
                           FontWeight="SemiBold"/>

                    <StackPanel HorizontalAlignment="Right"
                                Orientation="Horizontal">

                        <Button Width="20" Height="20"
                                Background="Transparent"
                                BorderThickness="0"
                                Foreground="Gray"
                                FontWeight="Bold"
                                Click="ButtonMinimize_Click">
                            <Button.Content>
                                <Viewbox xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation" Stretch="Uniform">
                                    <Canvas Name="MinimizeIcon" Width="960" Height="960">
                                        <Canvas.RenderTransform>
                                            <TranslateTransform X="0" Y="650"/>
                                        </Canvas.RenderTransform>
                                        <Canvas.Resources/>
                                        
                                        <Path xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml" Name="path2" Fill="Gray">
                                            <Path.Data>
                                                <PathGeometry Figures="M240-120v-80h480v80H240Z" FillRule="NonZero"/>
                                            </Path.Data>
                                        </Path>
                                    </Canvas>
                                </Viewbox>
                            </Button.Content>
                        </Button>
                        
                        <Button Width="20" Height="20"
                                Background="Transparent"
                                BorderThickness="0"
                                Foreground="Gray"
                                FontWeight="Bold"
                                Click="CloseButton_Click">
                            <Button.Content>
                                <Viewbox xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation" Stretch="Uniform">
                                    <Canvas Name="CloseIcon" Width="960" Height="960">
                                        <Canvas.RenderTransform>
                                            <TranslateTransform X="0" Y="960"/>
                                        </Canvas.RenderTransform>
                                        <Canvas.Resources/>
                                        
                                        <Path xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml" Name="ClosePath" Fill="Gray">
                                            <Path.Data>
                                                <PathGeometry Figures="m256-200-56-56 224-224-224-224 56-56 224 224 224-224 56 56-224 224 224 224-56 56-224-224-224 224Z" FillRule="NonZero"/>
                                            </Path.Data>
                                        </Path>
                                    </Canvas>
                                </Viewbox>
                            </Button.Content>
                        </Button>

                    </StackPanel>
                </Grid>
            </Border>

            <Grid Grid.Row="1">
                <TextBlock  
                           FontSize="36" 
                           FontWeight="Bold" 
                           FontFamily="Fonts/#RobotoFlex"
                           Foreground="White" 
                           HorizontalAlignment="Center" 
                           Margin="0,50,0,475">
                    <Run Text="Summoner"/><Run Text="Swap" Foreground="#d1363a" FontStyle="Italic"/>
                </TextBlock>
                <TextBox x:Name="ProfileNameTextBox" 
                         Margin="350,175,350,350" 
                         Style="{StaticResource ModernTextBox}" />
                <Button Content="Save Current Session" 
                        Click="SaveProfile_Click" 
                        Margin="10,504,710,10"
                        Width="160"
                        Style="{StaticResource ModernButton}"/>
                <ListBox x:Name="ProfileListBox" 
                         Margin="200,259,200,150"/>
                <Button Content="Load Selected Profile" 
                        Click="LoadProfile_Click" 
                        Margin="734,504,10,10"
                        Style="{StaticResource ModernButton}"/>
                <CheckBox x:Name="MultipleClientCheckBox" 
                          Content="Multiple Clients" 
                          HorizontalAlignment="Left" 
                          Margin="734,492,0,0" 
                          VerticalAlignment="Top"/>
                <Button Content="Delete Profile" 
                        Click="DeleteProfile_Click" 
                        HorizontalAlignment="Center" 
                        Margin="0,522,0,0" 
                        VerticalAlignment="Top" 
                        Width="120"
                        Style="{StaticResource ModernButton}"/>
            </Grid>
        </Grid>
    </Border>
</Window>
